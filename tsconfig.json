{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "types": ["node"],
    "lib": ["esnext", "dom"],
    "noEmit": true,
    "target": "esnext",
    "moduleResolution": "nodenext"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
